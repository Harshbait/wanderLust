<% layout('/layouts/boilerplate') %>

<div class="container mt-4">
  <h2 style="text-align: center; margin-top: 20px;">
    <%= category %>
  </h2>

  <% if (listings.length === 0) { %>
    <p style="text-align:center; color: gray;">No listings found for this category.</p>
  <% } else { %>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% listings.forEach(listing => { %>
        <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
          <div class="card card-listing col mb-4">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem; object-fit: cover;">
            <div class="card-body">
              <p class="card-text mb-1">
                <b><%= listing.title %></b>
              </p>
              <p class="card-text mb-1">
                <%= listing.location %>, <%= listing.country %>
              </p>
              <p class="card-text">
                &#8377;<%= listing.price.toLocaleString('en-IN') %> / night
              </p>
            </div>
          </div>
        </a>
      <% }) %>
    </div>

  <% } %>
</div>
