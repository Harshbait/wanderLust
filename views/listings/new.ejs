<% layout('/layouts/boilerplate') %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <br>
                <h3>Creating a Listining</h3>
                <form method="post" action="/listings/" novalidate enctype="multipart/form-data"
                    class="needs-validation">
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input type="text" name="listings[title]" class="form-control"
                            placeholder="Enter a Catchy Title" required />
                        <div class="valid-feedback">Title looks Nice!!</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea type="text" class="form-control"
                            name="listings[description]" required></textarea>
                            <div class="valid-feedback">Dec looks Nice!!</div>
                            <div class="invalid-feedback">Please enter short Description!!</div>  
                    </div>

                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label> <br>
                        <!-- Hidden input that stores selected value -->
                        <input type="hidden" name="listings[category]" id="selectedCategory" required>
                        <div class="btn-group w-75">
                            <button type="button" class="btn  btn-outline-success dropdown-toggle w-100"
                                data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false"
                                id="categoryDropdown">
                                Select Category
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-lg-start w-100">
                                <li><button class="dropdown-item" type="button"><i class="fa-solid fa-fire"></i> Trending</button></li>
                                <li><button class="dropdown-item" type="button"><i class="fa-solid fa-bed"> </i> Rooms</button></li>
                                <li><button class="dropdown-item" type="button"><i class="fa-solid fa-mountain-city"> </i> Iconic Cities</button></li>
                                <li><button class="dropdown-item" type="button"> <i class="fa-solid fa-mountain-sun"> </i> Mountain</button></li>
                                <li><button class="dropdown-item" type="button"><i class="fa-brands fa-fort-awesome"> </i> Castle</button></li>
                                <li><button class="dropdown-item" type="button"><i class="fa-solid fa-person-swimming"></i>  Amazing Pools</button></li>
                                <li><button class="dropdown-item" type="button"><i class="fa-solid fa-campground"></i> Camping</button></li>
                                <li><button class="dropdown-item" type="button"> <i class="fa-solid fa-cow"></i> Farm</button></li>
                                <li><button class="dropdown-item" type="button"><i class="fa-solid fa-snowman"></i> Arctic</button></li>
                            </ul>
                            <div class="invalid-feedback">Please select a category.</div>
                        </div>
                        
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-lable">Upload Listing Image</label>
                        <input type="file" name="listings[image]" class="form-control">

                    </div>

                    <div class="row">

                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-lable">Price</label>
                            <input name="listings[price]" class="form-control" placeholder="1200" required>
                            <div class="invalid-feedback">Price Should be Valid!!</div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-lable">Country</label>
                            <input type="text" class="form-control" name="listings[country]" placeholder="India"
                                required>
                            <div class="invalid-feedback">Country Should be Valid!!</div>
                        </div>
                    </div>


                    <div class="mb-3">
                        <label for="location" class="form-lable">Location</label>
                        <input type="text" name="listings[location]" class="form-control"
                            placeholder="Mumbai, Maharashtra" required>
                        <div class="invalid-feedback">Location Should be Valid!!</div>
                    </div>

                    <button class="btn btn-dark mb-2 new-btn">Add</button>
                </form>
            </div>
        </div>

        <script>

            const dropdownItems = document.querySelectorAll(".dropdown-item");
            const dropdownButton = document.getElementById("categoryDropdown");
            const hiddenInput = document.getElementById("selectedCategory");

            dropdownItems.forEach((item) => {
                item.addEventListener("click", () => {
                    const selected = item.innerText.trim();
                    dropdownButton.textContent = selected; // Show selection on button
                    hiddenInput.value = selected.toLowerCase(); // Save lowercase in DB
                });
            });

        </script>
    </body>