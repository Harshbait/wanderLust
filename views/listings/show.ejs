<% layout('/layouts/boilerplate') %>

    <body>
        <script>
            let mapToken = "<%= process.env.MAP_TOKEN %>";
            let list = <%- JSON.stringify(list) %>
        </script>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>
                    <%= list.title %>
                </h3>
            </div>

            <div class="card card-listing col-6 offset-3 show-card">
                <img src="<%= list.image.url %>" class="card-img-top show-image" alt="Listing_image">
                <div class="card-body">
                    <p class="card-text"><b>Owned By: </b><i>
                            <%= list.owner.username %>
                        </i></p>
                    <p class="card-text">

                        <%= list.description %> <br>
                            &#8377; <%= list.price.toLocaleString('en-IN') %><br>
                                <%= list.location %> <br>
                                    <%= list.country %>
                    </p>
                </div>
            </div>

            <% if(currentUser && list.owner._id.equals(currentUser._id)) { %>

                <div class="btns">

                    <a class="btn btn-dark mb-2 new-btn col-1 offset-3" href="/listings/<%= list._id %>/edit">Edit</a>

                    <form method="post" action="/listings/<%= list._id %>?_method=DELETE">
                        <button class="btn btn-dark mb-2  offset-5">Delete</button>
                    </form>
                </div>

                <% } %>



                    <div class="col-8 offset-3 mb-3">
                        <hr>
                        <% if(currentUser) { %>
                            <h4>Leave a Review</h4>
                            <form method="post" action="/listings/<%= list.id %>/reviews" novalidate
                                class="needs-validation">
                                <!-- for Rating -->


                                <!-- <input type="range" min="1" max="5" id="rating" name="review[rating]"
                                    class="form-range"> -->


                                <div class="mb-3 mt-3">
                                    <label class="form-lable" for="rating">Rating</label>
                                    <fieldset class="starability-slot">

                                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                            value="1" checked aria-label="No rating." />
                                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                        <label for="first-rate1" title="Terrible">1 star</label>
                                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                        <label for="first-rate2" title="Not good">2 stars</label>
                                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                        <label for="first-rate3" title="Average">3 stars</label>
                                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                        <label for="first-rate4" title="Very good">4 stars</label>
                                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                        <label for="first-rate5" title="Amazing">5 stars</label>
                                    </fieldset>
                                </div>
                                <!-- for Comment -->

                                <div class="mb-3 mt-3">
                                    <label class="form-lable" for="comment">Comment</label>
                                    <textarea class="form-control" type="text" id="comment" name="review[comment]"
                                        cols="30" rows="5" required></textarea>
                                    <div class="invalid-feedback">Please add some comment for review </div>
                                </div>

                                <button class="btn btn-outline-dark">Submit</button>
                            </form>
                            <hr>
                            <% } %>




                                <% if(list.reviews.length> 0 ) { %>
                                    <div class="row">
                                        <p><b> All reviews</b></p>
                                        <% for(let review of list.reviews) { %>
                                            <div class="card card col-5 mb-3 ms-3">
                                                <div class="card-body">
                                                    <h5 class="card-title">@<%= review.author.username %>
                                                    </h5>


                                                    <p class="starability-result card-text" data-rating=<%=review.rating
                                                        %>>
                                                    </p>
                                                    <p class="card-text">
                                                        <%= review.comment %>
                                                    </p>
                                                    
                                                    <% if(currentUser && list.owner._id.equals(currentUser._id)) { %>

                                                    <form class="mb-3" method="post"
                                                        action="/listings/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE">
                                                        <button class="btn btn-small btn-danger">Delete</button>
                                                    </form>

                                                    <% } %>
                                                </div>
                                            </div>
                                            <% } %>
                                    </div>
                                    <% } %>

                    </div>
                    <div class="col-8 offset-3 mb-3">
                        <h3>Where you'll be </h3>
                        <div id="map"></div>

                    </div>
        </div>
        <script src="/js/map.js"></script>



    </body>